<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="@drawable/buttom_main_normal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/zone_image"
        android:gravity="center"
        android:src="@drawable/room2"
        android:duplicateParentState="true"
        android:layout_gravity="center"
        android:padding="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/zone_tab_title"
        android:id="@+id/zonetitle"
        android:layout_gravity="center"
        android:singleLine="true"
        android:duplicateParentState="true"
        android:textColor="@color/line11"
        android:maxLines="1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:shadowColor="@color/my_main_back"
        android:gravity="center"/>

</RelativeLayout>